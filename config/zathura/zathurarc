# ==============================
#  Zathura config - Gruvbox Material
# ==============================

# === Behavior ===
set selection-clipboard clipboard      # copy â†’ system clipboard
set adjust-window "best-fit"           # zoom to fit page on open
set statusbar-h-padding 8
set statusbar-v-padding 2
set page-padding 2
set first-page-column 1
set incremental-search true

# === Font ===
set font "JetBrains Mono 11"

# === Recolor (dark mode) ===
set recolor true                      # start with normal colors
# set recolor true                     # uncomment to always start in dark mode
set recolor-lightcolor "#1e1e2e"   # background when recolor is ON (Base)
set recolor-darkcolor  "#cdd6f4"   # text when recolor is ON (Text)
# === Keybindings ===
map <C-c> copy
map y copy
map J navigate next
map K navigate previous
map R recolor

set default-fg                rgba(205,214,244,1)
set default-bg                rgba(30,30,46,1)

set completion-bg             rgba(49,50,68,1)
set completion-fg             rgba(205,214,244,1)
